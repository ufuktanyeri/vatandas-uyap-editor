{
  "manifest_version": 3,
  "name": "UYAP Evrak İndirici",
  "version": "2.0.0",
  "description": "UYAP Vatandaş Portalı üzerinde seçilen dosyalardaki evrakları güvenli şekilde toplu indirmenizi sağlar.",
  "permissions": ["activeTab", "storage"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://vatandas.uyap.gov.tr/*"],
      "js": [
        "content/constants.js",
        "content/scanner.js",
        "content/downloader.js",
        "content/state.js",
        "content/ui.js",
        "content/main.js"
      ],
      "css": ["styles/panel.css"],
      "run_at": "document_idle"
    }
  ]
}
